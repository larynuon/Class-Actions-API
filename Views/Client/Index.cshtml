@model IEnumerable<Class_Actions_API.Models.Client>
<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Client List</h2>
        </div>
        <div class="col-6 text-right">
            <a asp-controller="Client" asp-action="Create" class="btn btn-primary">Create new Client</a>
        </div>
    </div>
    <br />
    @using (Html.BeginForm())
    {
        <p>
            First Name: @Html.TextBox("firstName")
            Surname: @Html.TextBox("surname")
            State: @Html.DropDownList("state", "All")

            <input type="submit" value="Filter" />
        </p>
    }
    @if (Model.Count() > 0)
    {
        <table class="table table-bordered table-striped" style="width:100%">
            <thead>
                <tr>
                    <th>
                        First Name
                    </th>
                    <th>
                        Surname
                    </th>
                    <th>
                        Address
                    </th>
                    <th>
                        Suburb
                    </th>
                    <th>
                        State
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var client in Model)
                {
                    <tr>
                        <td width="18%">@client.FirstName</td>
                        <td width="18%">@client.Surname</td>
                        <td width="18%">@client.AddressLine1</td>
                        <td width="27%">@client.Suburb</td>
                        <td width="27%">@client.State</td>
                        <td width="18%">
                            <div class="w-100 btn-group" role="group">
                                <a asp-controller="Client" asp-action="Update" asp-route-Id="@client.Id" class="btn btn-primary mx-1">Update</a>
                                <a asp-controller="Client" asp-action="Delete" asp-route-Id="@client.Id" class="btn btn-danger mx-1">Delete</a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p>No clients created yet</p>
    }
</div>

